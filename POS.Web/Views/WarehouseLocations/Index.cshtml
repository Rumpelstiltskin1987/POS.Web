@model IEnumerable<POS.Entities.WarehouseLocation>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<h1>Lista de Ubicaciones</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Agregar Ubicación</a>
    <a class="btn btn-secondary" asp-controller="Warehouses" asp-action="Index">Almacenes</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Dirección
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdWL">Editar</a>
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.IdWL">Detalles</a>
                <a class="btn btn-warning" asp-action="Inactivate" asp-route-id="@item.IdWL">Inactivar</a>
            </td>
        </tr>
}
    </tbody>
</table>
