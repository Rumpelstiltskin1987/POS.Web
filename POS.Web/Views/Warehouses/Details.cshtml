@model POS.Entities.Warehouse

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Almacén</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Ubicación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WarehouseLocation.Address)
        </dd>
    </dl>
</div>
<br />
<div>
    <a class="btn btn-primary" asp-action="Editar" asp-route-id="@Model?.IdWarehouse">Edit</a> |
    <a class="btn btn-secondary" asp-action="Index">Volver al Listado</a>
</div>
