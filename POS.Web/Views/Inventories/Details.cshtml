@model POS.Entities.Inventory

@{
    ViewData["Title"] = "Detalle";
}

<h1>Detalle</h1>

<div>
    <h4>Movimiento de Inventario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Movimiento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MovementType)
        </dd>
        <dt class = "col-sm-2">
            Cantidad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Usuario Movimiento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MovementUser)
        </dd>
        <dt class = "col-sm-2">
            Fecha Movimiento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MovementDate)
        </dd>
    </dl>
