@model POS.Entities.Category

@{
    ViewData["Title"] = "Inactivate";
}

<h1>Inactivar</h1>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="Inactivate">
        <input type="hidden" asp-for="IdCategory" />
        <input type="hidden" asp-for="Name" />
        <input type="hidden" asp-for="Status" />
        <input type="hidden" asp-for="CreateUser" />
        <input type="hidden" asp-for="CreateDate" />
        <input type="submit" value="Inactivar" class="btn btn-warning" /> |
        <a class="btn btn-secondary" asp-action="Index">Volver al listado</a>
    </form>
</div>