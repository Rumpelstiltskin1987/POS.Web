@model POS.Entities.Category

@{
    ViewData["Title"] = "Alta";
}

<h1>Alta</h1>

<h4>Categorias</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nombre</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none;">
                <label asp-for="CreateUser" class="control-label"></label>
                <input asp-for="CreateUser" class="form-control" value="@ViewData["User"]"/>
                <span asp-validation-for="CreateUser" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none;">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" value="AC" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Volver al listado</a>     
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
