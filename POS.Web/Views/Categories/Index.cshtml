@model IEnumerable<POS.Entities.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Categorías @ViewData["txtTitle"]</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Agregar Categoría</a>
    <a class="btn btn-secondary" asp-action="Index" asp-route-status="@ViewData["asp-route"]">
        @ViewData["asp-button"]
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdCategory"
                       asp-route-option="Actualizar">
                        Editar
                    </a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.IdCategory">Detalles</a>
                    <a class="btn btn-warning" asp-action="@ViewData["asp-action"]" asp-route-id="@item.IdCategory"
                       asp-route-option="@ViewData["option"]">
                        @ViewData["txtButton"]
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
