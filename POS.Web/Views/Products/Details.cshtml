@model POS.Entities.Product

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Producto</h4>
    <hr />
    <table>
        <tr>
            <td>
                <dl class="row">
                    <dt class="col-sm-2">
                        Nombre
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        Categoría
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdCategory)
                    </dd>
                    <dt class="col-sm-2">
                        Precio
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Price)
                    </dd>
                    <dt class="col-sm-2">
                        Unidad de Medida
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.MeasureUnit)
                    </dd>
                </dl>
            </td>
            <td>
                <img src="@Model.UrlImage" alt="Imagen de @Model.Name" style="width: 100px; height: auto;" />
            </td>            
        </tr>
    </table>  
</div>
<br />
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.IdProduct">Edit</a> |
    <a class="btn btn-secondary" asp-action="Index">Volver al listado</a>
</div>
